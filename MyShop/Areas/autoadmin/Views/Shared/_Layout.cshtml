<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html, charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Админка</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/autoadmin" class="navbar-brand">Админ</a>
                @Html.ActionLink("Страницы", "Index", "autoadmin/AdminPages", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Сайдбар", "EditSidebar", "autoadmin/AdminPages", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Категории", "CategorList", "autoadmin/Shop", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Товары", "Products", "autoadmin/Shop", new { area = "" }, new { @class = "navbar-brand" })

                @*@Html.ActionLink("Имя приложения", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                </ul>
                <ul class="navbar-right">
                    @*<li>
                        @Html.ActionLink("Страницы", "Index", "autoadmin/AdminPages", new { area = "" }, new { @class = "navbar-brand" })
                    </li>*@
                    <li><a href="/" class="navbar-brand" target="_blank">В магазин</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy, @DateTime.Now.Year – Админка=)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
