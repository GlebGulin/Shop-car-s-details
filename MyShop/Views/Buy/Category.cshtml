@model IEnumerable<NGLayer.Models.ViewModels.Shop.ProductViewModel>

@{
    if (ViewBag.CategoryName != null)
    {
        ViewBag.Title = ViewBag.CategoryName;
    }
    else
    {
        ViewBag.Title = "Товары";
    }
}

@if (ViewBag.CategoryName != null)
{
    <h2>@ViewBag.CategoryName</h2>
}
else
{
    <h2>Товаров пока нет</h2>
}


<div class="productList">
    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-md-4">

            <div class="productImg">
                <a href="/buy/product-details/@item.Slug">
                    @if (item.ImageString != null)
                    {
                        <img src="~/Content/images/Upload/Products/@item.Id/Thumbs/@item.ImageString" />
                    }
                    else
                    {
                        <img src="~/Content/images/Upload/Products/No-photo.jpg">
                    }
                </a>
            </div>

            <div class="productName">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Price)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </div>
            <div>
                @*<a href="/buy/product-details/@item.Slug">Подробнее</a>*@
                @Html.ActionLink("Details", "Details", new { body = item.Slug })
                @*@Html.ActionLink("По айди", "DetailTest", new { id = item.Id })*@
            </div>

        </div>
    }
</div>
